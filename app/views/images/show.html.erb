<p>
  <strong>Title:</strong>
  <%= @image.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @image.text %>
</p>

<h2>Comments</h2>
<%= render @image.comments %>

<h2>Add a comment:</h2>
<%= form_for([@image, @image.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_image_path(@image) %> |
<%= link_to 'Back', images_path %>
